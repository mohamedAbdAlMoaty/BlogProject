<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="25dp"
    android:weightSum="1"
    android:gravity="center_horizontal"
    android:id="@+id/rootLayout"
    android:background="@drawable/background_for_main"
    tools:context="com.mohamed.abdelmoaty.blogproject.activites.RegisterActivity">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:src="@drawable/frankenstein"
        android:id="@+id/logo"
        android:layout_weight="0.3"
        android:layout_marginBottom="20dp"
        android:layout_height="0dp" />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.6"
        android:layout_height="0dp">

        <EditText
            android:layout_width="match_parent"
            android:hint="@string/your_email"
            android:id="@+id/register_email"
            android:padding="15dp"
            android:inputType="textEmailAddress"
            android:fontFamily="@font/arkhip_font"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:background="@drawable/background_for_enter"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:hint="@string/password"
            android:id="@+id/register_password"
            android:padding="15dp"
            android:fontFamily="@font/arkhip_font"
            android:layout_marginTop="15dp"
            android:inputType="textPassword"
            android:textColor="@color/blue"
            android:textColorHint="@color/blue"
            android:background="@drawable/background_for_enter"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_width="match_parent"
            android:hint="@string/user_name"
            android:id="@+id/username"
            android:padding="15dp"
            android:textColor="@color/blue"
            android:layout_marginTop="15dp"
            android:inputType="text"
            android:fontFamily="@font/arkhip_font"
            android:textColorHint="@color/blue"
            android:background="@drawable/background_for_enter"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:text="@string/create_new_account"
            android:background="#FFF44336"

            android:textColor="@color/white"
            android:textSize="16sp"
            android:id="@+id/register_btn"
            android:layout_marginTop="15dp"
            android:padding="17dp"
            android:fontFamily="@font/arkhip_font"
            android:textAllCaps="false"
            android:layout_height="wrap_content" />

    </LinearLayout>



    <Button
        android:layout_width="match_parent"
        android:text="@string/have_an_account"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:id="@+id/register_login_btn"
        android:padding="17dp"
        android:background="#FFF44336"
        android:layout_weight="0.1"

        android:textAllCaps="false"
        android:fontFamily="@font/arkhip_font"
        android:layout_height="0dp" />

</LinearLayout>
