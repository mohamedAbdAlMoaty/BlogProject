<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    android:id="@+id/rootLayout"
    android:weightSum="1"
    android:background="@drawable/background_for_main"
    android:gravity="center_horizontal"
    tools:context="com.mohamed.abdelmoaty.blogproject.fragments.ProfileFragment">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="wrap_content"
        android:src="@drawable/default_image"
        android:id="@+id/setupimage"
        android:layout_weight="0.5"
        android:layout_height="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_weight="0.5"

        android:layout_height="0dp">

        <TextView
            android:layout_width="match_parent"
            android:hint="@string/my_name"
            android:textStyle="bold"
            android:padding="15dp"
            android:gravity="center"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:id="@+id/name"
            android:fontFamily="@font/arkhip_font"
            android:textSize="20sp"
            android:background="#FFF44336"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="match_parent"
            android:text="@string/sign_out"
            android:textColor="@color/white"
            android:textAllCaps="false"
            android:textSize="19sp"
            android:id="@+id/save"
            android:layout_marginTop="30dp"
            android:padding="17dp"
            android:fontFamily="@font/arkhip_font"
            android:background="@drawable/background_for_sginout"
            android:layout_height="wrap_content" />

    </LinearLayout>



</LinearLayout>
